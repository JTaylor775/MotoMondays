@model MotoMondays.Models.Part

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Part</h4>
    <hr />
    <dl class="row">
        @if (User.IsInRole("Administrator"))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PartID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PartID)
            </dd>
        }
        <dt class="col-sm-2">
            <h6 style="font-weight: bold">Part Name</h6>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PartName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InStock)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PartID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
